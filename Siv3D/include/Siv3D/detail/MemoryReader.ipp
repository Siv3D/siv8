# pragma once

namespace s3d
{
	////////////////////////////////////////////////////////////////
	//
	//	(constructor)
	//
	////////////////////////////////////////////////////////////////

	inline MemoryReader::MemoryReader(const void* data, const size_t size_bytes)
		: m_blob{ data, size_bytes } {}

	constexpr MemoryReader::MemoryReader(const Blob& blob) noexcept
		: m_blob{ blob } {}

	constexpr MemoryReader::MemoryReader(Blob&& blob) noexcept
		: m_blob{ std::move(blob) } {}

	////////////////////////////////////////////////////////////////
	//
	//	supportsLookahead
	//
	////////////////////////////////////////////////////////////////

	constexpr bool MemoryReader::supportsLookahead() const noexcept
	{
		return true;
	}

	////////////////////////////////////////////////////////////////
	//
	//	isOpen
	//
	////////////////////////////////////////////////////////////////

	constexpr bool MemoryReader::isOpen() const noexcept
	{
		return (not m_blob.isEmpty());
	}

	////////////////////////////////////////////////////////////////
	//
	//	operator bool
	//
	////////////////////////////////////////////////////////////////

	constexpr MemoryReader::operator bool() const noexcept
	{
		return (not m_blob.isEmpty());
	}

	////////////////////////////////////////////////////////////////
	//
	//	size
	//
	////////////////////////////////////////////////////////////////

	constexpr int64 MemoryReader::size() const
	{
		return m_blob.size();
	}

	////////////////////////////////////////////////////////////////
	//
	//	getPos
	//
	////////////////////////////////////////////////////////////////

	constexpr int64 MemoryReader::getPos() const
	{
		return m_pos;
	}

	////////////////////////////////////////////////////////////////
	//
	//	setPos
	//
	////////////////////////////////////////////////////////////////

	constexpr int64 MemoryReader::setPos(const int64 pos)
	{
		return (m_pos = Clamp<int64>(pos, 0, m_blob.ssize()));
	}

	////////////////////////////////////////////////////////////////
	//
	//	skip
	//
	////////////////////////////////////////////////////////////////

	constexpr int64 MemoryReader::skip(const int64 offset)
	{
		return (m_pos = Clamp<int64>((m_pos + offset), 0, m_blob.ssize()));
	}

	////////////////////////////////////////////////////////////////
	//
	//	read
	//
	////////////////////////////////////////////////////////////////

	bool MemoryReader::read(Concept::TriviallyCopyable auto& dst)
	{
		return (read(std::addressof(dst), sizeof(dst)) == sizeof(dst));
	}

	////////////////////////////////////////////////////////////////
	//
	//	lookahead
	//
	////////////////////////////////////////////////////////////////

	bool MemoryReader::lookahead(Concept::TriviallyCopyable auto& dst) const
	{
		return (lookahead(std::addressof(dst), sizeof(dst)) == sizeof(dst));
	}
}
